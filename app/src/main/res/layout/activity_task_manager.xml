<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_task_manager"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.amit.timesaver.TaskManagerActivity"
    android:layout_margin="@dimen/default_margin">

    <TextView
        android:id="@+id/task_manager_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/task_manager_headline"
        android:textStyle="bold|italic"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginBottom="@dimen/default_margin"
        android:textSize="@dimen/large_text_size"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/task_manager_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/task_manager_headline"
        android:scrollbars="vertical" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/task_manager_fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="@dimen/small_margin"
        android:layout_marginBottom="@dimen/small_margin"
        android:src="@drawable/ic_plus_sign"/>


</RelativeLayout>
