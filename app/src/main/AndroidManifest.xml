<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.amit.timesaver">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/time_saver_icon_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/time_saver_icon_launcher"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".DashboardActivity"
            android:theme="@style/splashScreenTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddCourseActivity" android:launchMode="singleTask"/>
        <activity android:name=".LoginActivity" />
        <activity android:name=".AddSemesterActivity" android:launchMode="singleTask"/>
        <activity android:name=".TaskManagerActivity" android:launchMode="singleTask"/>
        <activity android:name=".SignupActivity" />
        <activity android:name=".BaseActivity" />
        <activity android:name=".AddCourseInstanceActivity" android:launchMode="singleTask"/>
        <activity android:name=".AddTaskActivity" android:launchMode="singleTask"/>
    </application>

</manifest>